<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AntMaster - Proyecto EV1" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MainBackgroundBrush}">
    
    <DockPanel>
        <!-- Header estilo iNaturalist -->
        <Border DockPanel.Dock="Top" Background="{StaticResource HeaderBackgroundBrush}" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Height="60" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Logo -->
                    <ColumnDefinition Width="*"/>    <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/> <!-- Menu -->
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="Logo_Click">
                    <TextBlock Text="Ant" FontSize="24" FontWeight="Bold" Foreground="#333333"/>
                    <TextBlock Text="Master" FontSize="24" FontWeight="Bold" Foreground="{StaticResource InatGreenBrush}"/>
                </StackPanel>

                <!-- Menu Links -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Explora" Click="Nav_Master" Margin="5" Background="Transparent" BorderThickness="0" FontWeight="SemiBold" Foreground="#555555"/>
                    <Button Content="Comunidad (IA)" Click="Nav_Mcp" Margin="5" Background="Transparent" BorderThickness="0" FontWeight="SemiBold" Foreground="#555555"/>
                    <Button Content="Ingresar" Click="Nav_Login" Style="{StaticResource PrimaryButton}" Margin="15,0,0,0" Width="80"/>
                    <Button Content="Salir" Click="Exit_Click" Margin="5" Background="Transparent" BorderThickness="0" FontSize="11" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Área de contenido dinámico -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0"/>
    </DockPanel>
</Window>