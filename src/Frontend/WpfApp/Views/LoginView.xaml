<Page x:Class="WpfApp.Views.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Iniciar Sesión" Background="{StaticResource MainBackgroundBrush}">

    <Grid>
        <Border Background="White" Width="350" Height="400" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#CCCCCC"/>
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center" Margin="30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="Ant" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Master" FontSize="32" FontWeight="Bold" Foreground="{StaticResource InatGreenBrush}"/>
                </StackPanel>

                <TextBlock Text="Correo electrónico" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUser" Height="35" VerticalContentAlignment="Center" Padding="5,0" Margin="0,0,0,15"/>

                <TextBlock Text="Contraseña" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtPass" Height="35" VerticalContentAlignment="Center" Padding="5,0" Margin="0,0,0,25"/>

                <Button x:Name="BtnLogin" Content="Iniciar Sesión" Click="BtnLogin_Click" Style="{StaticResource PrimaryButton}" Height="40" FontSize="14" FontWeight="Bold"/>
                
                <TextBlock Text="¿No tienes cuenta?" HorizontalAlignment="Center" Margin="0,20,0,10" Foreground="{StaticResource TextSecondaryBrush}"/>
                <Button x:Name="BtnRegister" Content="Crear Cuenta" Click="BtnRegister_Click" Background="Transparent" BorderThickness="0" Foreground="{StaticResource InatGreenBrush}" FontWeight="Bold" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>