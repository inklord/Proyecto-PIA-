<Page x:Class="WpfApp.Views.SpeciesEditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Editor de Especies" Background="{StaticResource MainBackgroundBrush}">
    
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Formulario -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Detalles de la Especie" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource TextPrimaryBrush}"/>
            
            <Label Content="Nombre Científico" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtName" Padding="8" Margin="0,0,0,15" BorderBrush="#DDDDDD"/>

            <Label Content="URL AntWiki" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtWiki" Padding="8" Margin="0,0,0,15" BorderBrush="#DDDDDD"/>

            <Label Content="URL Foto" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtPhoto" Padding="8" Margin="0,0,0,15" BorderBrush="#DDDDDD" TextChanged="TxtPhoto_TextChanged"/>

            <Label Content="iNaturalist ID" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtInat" Padding="8" Margin="0,0,0,15" BorderBrush="#DDDDDD"/>

            <Label Content="Descripción" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtDesc" Height="150" TextWrapping="Wrap" AcceptsReturn="True" 
                     Padding="8" Margin="0,0,0,15" BorderBrush="#DDDDDD" VerticalScrollBarVisibility="Auto"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Guardar Cambios" Click="BtnSave_Click" Width="150" Padding="10" Background="#28a745" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
                <Button Content="Cancelar" Click="BtnCancel_Click" Width="100" Padding="10" Margin="10,0,0,0" Background="#F8F9FA" BorderBrush="#DDDDDD" BorderThickness="1" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!-- Preview -->
        <Border Grid.Column="1" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="5" Background="White" Padding="10" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#DDDDDD" Opacity="0.3" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Vista Previa Imagen" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Border CornerRadius="3" ClipToBounds="True" Height="200" Background="#F8F9FA">
                    <Image x:Name="ImgPreview" Stretch="UniformToFill"/>
                </Border>
                <TextBlock Text="La imagen aparecerá aquí si la URL es válida." TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,5,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>