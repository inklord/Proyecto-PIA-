<Page x:Class="WpfApp.Views.GenusView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Género" Background="{StaticResource MainBackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="← Volver" Click="BtnBack_Click" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,15,0" FontSize="14"/>
            <TextBlock x:Name="TxtTitle" FontSize="28" FontWeight="Light" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="SpeciesItems">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Tarjeta de Especie -->
                        <Border Background="White" Margin="10" CornerRadius="3" Width="220" Height="320">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Direction="270" Color="#DDDDDD" Opacity="0.5"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="180"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border CornerRadius="3,3,0,0" ClipToBounds="True" MouseLeftButtonUp="SpeciesCard_Click" Cursor="Hand">
                                    <Image Source="{Binding PhotoUrl}" Stretch="UniformToFill"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Margin="12,12,12,0">
                                    <TextBlock Text="{Binding ScientificName}" FontWeight="Bold" FontStyle="Italic"
                                               FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                                    <TextBlock Text="Ver en AntWiki" Margin="0,5,0,0" MouseLeftButtonUp="SpeciesCard_Click"
                                               Foreground="{StaticResource InatGreenBrush}" FontSize="12" Cursor="Hand"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                                    <Button Content="Editar" Tag="{Binding}" Click="BtnEdit_Click" Margin="0,0,5,0" Padding="5,2" Background="#007ACC" Foreground="White" BorderThickness="0"/>
                                    <Button Content="Borrar" Tag="{Binding}" Click="BtnDelete_Click" Padding="5,2" Background="#DC3545" Foreground="White" BorderThickness="0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>