<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.McpPage"
             Title="Asistente IA">
    <Grid RowDefinitions="*,Auto" Padding="10" RowSpacing="10">
        <Editor x:Name="EdHistory" IsReadOnly="True" Placeholder="Historial del chat..." />
        
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto" ColumnSpacing="10">
            <Entry x:Name="EntQuery" Placeholder="Pregunta algo..." />
            <Button Text="Enviar" Grid.Column="1" Clicked="BtnSend_Clicked" />
        </Grid>
    </Grid>
</ContentPage>
